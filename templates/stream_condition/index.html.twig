    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stream_condition in stream_conditions %}
            <tr>
                <td>{{ stream_condition.id }}</td>
                <td>{{ stream_condition.title }}</td>
                <td>
                    <a href="{{ path('stream_condition_show', {'id': stream_condition.id}) }}">show</a>
